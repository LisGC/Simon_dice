<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textTouch"
        android:layout_width="316dp"
        android:layout_height="103dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="a"
        android:textAlignment="center"
        android:textColor="@color/darkBrown"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ratImage"
        android:layout_width="325dp"
        android:layout_height="401dp"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTouch"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rata3" />

    <TextView
        android:id="@+id/textPuntaje"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:fontFamily="sans-serif"
        android:text="@string/points"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratImage" />

    <TextView
        android:id="@+id/textPuntos"
        android:layout_width="78dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="196dp"
        android:fontFamily="sans-serif"
        android:text=""
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratImage" />

</androidx.constraintlayout.widget.ConstraintLayout>